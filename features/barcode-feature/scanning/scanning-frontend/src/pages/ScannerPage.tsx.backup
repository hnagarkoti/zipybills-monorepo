  historyItem: { padding: 12, backgroundColor: '#fff', borderRadius: 4, marginBottom: 4 },
  historyText: { fontSize: 14, color: '#333' },
  historyBold: { fontWeight: '600' },
  demoCard: {
    margin: 20,
    padding: 16,
