{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "features/build-shared/ts-config/**",
    "features/build-shared/ts-lint/**",
    "features/build-shared/test-coverage/**",
    "features/build-shared/vitest-config/**"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", ".expo/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "lint:pkg": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
