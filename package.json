{
  "name": "zipybills-monorepo",
  "version": "0.0.0",
  "description": "Monorepo for Zipybills - Cross-platform SaaS billing application",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "start:api": "pnpm --filter @zipybills/factory-api-gateway start",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf {} +",
    "combine-coverage": "pnpm --filter @zipybills/test-coverage combine-coverage",
    "dev": "pnpm dev:factory",
    "start": "pnpm dev",
    "dev:factory": "concurrently --names 'API,WEB,MOBILE' --prefix-colors 'cyan,yellow,green' \"pnpm dev:factory-api\" \"pnpm dev:factory-mobile\" \"pnpm dev:marketing\"",
    "dev:factory-api": "pnpm --filter @zipybills/factory-api-gateway dev",
    "dev:factory-web": "pnpm --filter @zipybills/factory-os web",
    "dev:factory-mobile": "pnpm --filter @zipybills/factory-os start",
    "dev:factory-ios": "pnpm --filter @zipybills/factory-os ios",
    "dev:factory-android": "pnpm --filter @zipybills/factory-os android",
    "dev:marketing": "pnpm --filter @zipybills/marketing-site dev",
    "generate-feature": "pnpm --filter @zipybills/template-build generate",
    "smoke-test": "node scripts/smoke-test.mjs",
    "lint": "pnpm run lint:pkg && turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:pkg": "npmPkgJsonLint --configFile npmpackagejsonlint.config.cjs \"**/package.json\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "pipeline": "pnpm run format && pnpm run lint:fix && pnpm lint && pnpm build && pnpm test",
    "test": "turbo run test && pnpm run combine-coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "catalog:",
    "concurrently": "^9.2.1",
    "eslint": "catalog:",
    "npm-package-json-lint": "^9.0.0",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "turbo": "^2.6.1",
    "vitest": "catalog:"
  },
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "react-native": "0.81.5",
      "react-native-safe-area-context": "5.6.2",
      "react-native-reanimated": "~4.1.1"
    }
  }
}
